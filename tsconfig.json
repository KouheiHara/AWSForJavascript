{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true, 
    "noImplicitAny": true, 
    "skipLibCheck": true 
  }
}